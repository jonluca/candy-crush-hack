package gui;

import java.awt.Color;
import java.awt.FlowLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.io.IOException;

import javax.swing.JButton;
import javax.swing.JFileChooser;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JOptionPane;
import javax.swing.filechooser.FileNameExtensionFilter;

public class CCHack extends JFrame {

    private static final long serialVersionUID = 1L;
    private JLabel selectLabel;
    private JButton selectButton;
    private File file;

    public CCHack() {
	super("Candy Crush Save Game Hack");
	initializeComponents();
	createGUI();
    }

    public static void main(String[] args) {
	CCHack cchack = new CCHack();
	cchack.setVisible(true);
    }

    private void initializeComponents() {

	setSize(800, 500);
	setBackground(Color.WHITE);
	setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	setLayout(new FlowLayout());

	selectLabel = new JLabel("Please select your save.dat");
	selectButton = new JButton("Choose File");
	selectButton.addActionListener(new ActionListener() {
	    public void actionPerformed(ActionEvent ae) {
		file = new JFileChooser("Choose File");
		FileNameExtensionFilter filter = new FileNameExtensionFilter("TXT Files", "txt");
		file.setFileFilter(filter);
		file.setAcceptAllFileFilterUsed(false);
		int returnValue = file.showOpenDialog(null);
		if (returnValue == JFileChooser.APPROVE_OPTION) {
		    selectedFile = file.getSelectedFile();
		    try {
			String[] teamNames = { team1tf.getText(), team2tf.getText(), team3tf.getText(),
				team4tf.getText() };
			if (quickPlay.isSelected()) {
			    gameData = new GamePlay(selectedFile.getAbsolutePath(), numberOfTeams, teamNames, true);

			} else {
			    gameData = new GamePlay(selectedFile.getAbsolutePath(), numberOfTeams, teamNames, false);
			}
			loadFile.setText("File Selected: " + selectedFile.getName());
			changed();
		    } catch (IOException ioe) {
			loadFile.setText("Error!");
			gameData = null;
			start.setEnabled(false);
			JOptionPane.showMessageDialog(null, ioe.toString());
		    } catch (Exception e) {
			loadFile.setText("Error!");
			gameData = null;
			start.setEnabled(false);
			JOptionPane.showMessageDialog(null, e.toString());
		    }
		}
	    }
	});

    }

    private void createGUI() {

    }

}
